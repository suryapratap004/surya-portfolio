        color: #f0eafc;
        text-decoration: none;
        font-weight: 600;
        font-size: 1.15rem;
        padding: 10px 20px;
        border-radius: 50px;
        transition: background 0.4s, color 0.4s, box-shadow 0.4s;
        position: relative;
        z-index: 1;
        box-shadow: 0 0 5px transparent;
      }
      nav a:hover {
        background: #8b70e9;
        color: white;
        box-shadow: 0 4px 16px rgba(139, 112, 233, 0.7);
      }
      section {
        max-width: 900px;
        margin: 60px auto;
        padding: 40px 30px;
        background: rgba(255, 255, 255, 0.97);
        border-radius: 25px;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
        transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 1s forwards;
      }
      section:nth-of-type(odd) { animation-delay: 0.2s; }
      section:nth-of-type(even) { animation-delay: 0.4s; }
      section:hover {
        transform: translateY(-10px);
        box-shadow: 0 16px 40px rgba(90, 63, 187, 0.25);
      }
      @keyframes fadeInUp {
        to { opacity: 1; transform: translateY(0);}
      }
      h2 {
        color: #5a3fbb;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 25px;
        letter-spacing: 1.5px;
        border-bottom: 4px solid #8b70e9;
        padding-bottom: 12px;
      }
      .projects {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
      }
      .project {
        background: #f8faff;
        padding: 25px 30px;
        border-radius: 25px;
        box-shadow: 0 6px 20px rgba(90, 63, 187, 0.2);
        transition: box-shadow 0.4s ease;
      }
      .project:hover {
        box-shadow: 0 15px 40px rgba(90, 63, 187, 0.45);
      }
      .skills, .education, .hobbies, .strengths {
        margin-bottom: 40px;
      }
      .label {
        font-weight: 700;
        color: #6b4ceb;
        letter-spacing: 0.18em;
        text-transform: uppercase;
      }
      .skills ul, .strengths ul, .hobbies ul {
        list-style-type: circle;
        padding-left: 24px;
        color: #4a4a4a;
        font-size: 1.1rem;
      }
      ul li { margin-bottom: 10px; }
      footer {
        text-align: center;
        padding: 25px;
        color: #e1e1e8;
        font-style: italic;
        font-weight: 500;
        background: #4a3fba;
        box-shadow: inset 0 0 25px rgba(0, 0, 0, 0.15);
        border-top-left-radius: 50px;
        border-top-right-radius: 50px;
        margin-top: 70px;
        font-size: 1rem;
      }
      #contact a {
        color: #5a3fbb;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s, text-shadow 0.3s;
      }
      #contact a:hover {
        color: #8b70e9;
        text-shadow: 0 0 8px #8b70e9;
      }
      @media (max-width: 600px) {
        header h1 { font-size: 2.5rem; }
        header p { font-size: 1.1rem; }
        nav a { margin: 8px 12px; font-size: 1rem; padding: 8px 15px; }
        section { margin: 40px 15px; padding: 30px 25px; }
        h2 { font-size: 2rem; margin-bottom: 20px;}
        .projects { grid-template-columns: 1fr;}
        .profile-pic { width: 130px; height: 130px; margin-bottom: 20px;}
      }
    </style>
  </head>
